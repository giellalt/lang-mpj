@D.DCASE.FEW@+Der/Few:@D.DCASE.FEW@%>paraku		grammatical_case_3 ;
@D.DCASE.PL@+Der/Pl:@D.DCASE.PL@%>n			grammatical_case_3 ;
@D.DCASE.PL@+Der/Pl:@D.DCASE.PL@%>rti			grammatical_case_3 ;
@D.DCASE.GRP@+Der/Grp:@D.DCASE.GRP@%>ngurun		grammatical_case_3 ;
@D.DCASE.PAIR@+Der/Pair:@D.DCASE.PAIR@%>rarra		grammatical_case_3 ;
@D.DCASE.ONLY@+Der/Only:@D.DCASE.ONLY@%>wiyaju		grammatical_case_3 ;
@D.DCASE.FOC@+Der/Foc:@D.DCASE.FOC@%>nguninji		grammatical_case_3 ;

LEXICON semantic_case_2
! leading to grammatical_case_3
			grammatical_case_3 ;
+Abl:%>janu		grammatical_case_3 ;
+Abl:%>nguru		grammatical_case_3 ;
+Gen:%>kurnu		grammatical_case_3 ;
! +Gen:%>kura		grammatical_case_3 ;
