!! Noun inflection
!  ---------------
!! The Wangkajunga language nouns inflect in cases.

LEXICON NounReduplication	! not sure how to do this yet (there is a chapter in B&K on redupl)
		n_agr ;

LEXICON n_agr  
+N: x_agr ; ! This is the "General noun stem" of the floatchart

! Ergativity: Abs IV, Erg [ TV Abs ]

LEXICON x_agr ! This is the "General noun stem" of the floatchart
derivational_case_1 ;
semantic_case_1 ;
grammatical_case_1 ;
derivational_avoid_case ;
! focus ;
! inchoative;	! NB from the book, inchoative is used as verbalisation
! verb_derivation_ti;

LEXICON derivational_case_1
! leading to derivational_case_2
				derivational_case_2 ;
@U.DCASE.HAV@+Der/Hav:@U.DCASE.HAV@%>kurlu		derivational_case_2 ;		! having
@U.DCASE.THING@+Der/Thing:@U.DCASE.THING@%>pinti	derivational_case_2 ;		! associated thing
@U.DCASE.PRIV@+Der/Priv:@U.DCASE.PRIV@%>parni		derivational_case_2 ;		! privative
@U.DCASE.INT@+Der/Int:@U.DCASE.INT@%>kija		derivational_case_2 ;		! intentive
@U.DCASE.WANT@+Der/Want:@U.DCASE.WANT@%>jiraja		derivational_case_2 ;		! want
@U.DCASE.ASST@+Der/Asst:@U.DCASE.ASST@%>jarra	derivational_case_2 ;		! associated time or space
@U.DCASE.TEMP@+Der/Temp:@U.DCASE.TEMP@%>puru		derivational_case_2 ;		! temporal
@U.DCASE.DWELL@+Der/Dwell:@U.DCASE.DWELL@%>karraja		derivational_case_2 ;		! dweller
@U.DCASE.SIDE@+Der/Side:@U.DCASE.SIDE@%>karti		derivational_case_2 ;		! side
@U.DCASE.TYPE@+Der/Type:@U.DCASE.TYPE@%>partu		derivational_case_2 ;		! type
@U.DCASE.SIM@+Der/Sim:@U.DCASE.SIM@%>yuru			derivational_case_2 ;		! similar
@U.DCASE.CONTR@+Der/Contr:@U.DCASE.CONTR@%>munu		derivational_case_2 ;		! contradictive
@U.DCASE.MOD@+Der/Mod:@U.DCASE.MOD@%>marta		derivational_case_2 ;		! moderative
@U.DCASE.BIG@+Der/Big:@U.DCASE.BIG@%>paka			derivational_case_2 ;		! very big
@U.DCASE.ANOTH@+Der/Anoth:@U.DCASE.ANOTH@%>kujupa		derivational_case_2 ;		! another
@U.DCASE.VERY@+Der/Very:@U.DCASE.VERY@%>minyirri		derivational_case_2 ;		! very
@U.DCASE.NUM@+Der/Num:@U.DCASE.NUM@%>marlu		derivational_case_2 ;		! numerative
@U.DCASE.DUAL@+Der/Dual:@U.DCASE.DUAL@%>kujarra		derivational_case_2 ;		! dual
@U.DCASE.FEW@+Der/Few:@U.DCASE.FEW@%>paraku		derivational_case_2 ;		! few
@U.DCASE.PL@+Der/Pl:@U.DCASE.PL@%>n		derivational_case_2 ;		! plural alternative 1
@U.DCASE.PL@+Der/Pl:@U.DCASE.PL@%>rti		derivational_case_2 ;		! plural alternative 2
@U.DCASE.GRP@+Der/Grp:@U.DCASE.GRP@%>ngurun	derivational_case_2 ;	! group *afterwards comes PA
@U.DCASE.PAIR@+Der/Pair:@U.DCASE.PAIR@%>rarra		derivational_case_2 ;		! pair
@U.DCASE.ONLY@+Der/Only:@U.DCASE.ONLY@%>wiyaju		derivational_case_2 ;		! only
@U.DCASE.FOC@+Der/Foc:@U.DCASE.FOC@%>nguninji derivational_case_2 ;! focus (sometimes annotated as SPEC)
! leading to semantic_case_2
				semantic_case_2 ;	
+Der/Hav:%>kurlu		semantic_case_2 ;
+Der/Thing:%>pinti		semantic_case_2 ;
+Der/Priv:%>parni		semantic_case_2 ;
+Der/Int:%>kija			semantic_case_2 ;
+Der/Want:%>jiraja		semantic_case_2 ;
+Der/Asst:%>jarra		semantic_case_2 ;
+Der/Temp:%>puru		semantic_case_2 ;
+Der/Dwell:%>karraja		semantic_case_2 ;
+Der/Side:%>karti		semantic_case_2 ;
+Der/Type:%>partu		semantic_case_2 ;
+Der/Sim:%>yuru			semantic_case_2 ;
+Der/Contr:%>munu		semantic_case_2 ;
+Der/Mod:%>marta		semantic_case_2 ;
+Der/Big:%>paka			semantic_case_2 ;
+Der/Anoth:%>kujupa		semantic_case_2 ;
+Der/Very:%>minyirri		semantic_case_2 ;
+Der/Num:%>marlu		semantic_case_2 ;
+Der/Dual:%>kujarra		semantic_case_2 ;
+Der/Few:%>paraku		semantic_case_2 ;
+Der/Pl:%>n			semantic_case_2 ;
+Der/Pl:%>rti			semantic_case_2 ;
+Der/Grp:%>ngurun		semantic_case_2 ;
+Der/Pair:%>rarra		semantic_case_2 ;
+Der/Only:%>wiyaju		semantic_case_2 ;
+Der/Foc:%>nguninji		semantic_case_2 ;

LEXICON semantic_case_1
			derivational_case_3 ;
+Abl:%>janu		derivational_case_3 ;	! Ablative (motion away from a place)
+Abl:%>nguru		derivational_case_3 ;
+Gen:%>kurnu		derivational_case_3 ;	! Genitive (referred to as POSS - possessive - in book)
! +Gen:%>kura		derivational_case_3 ;	! kurnu is by far the most common GEN form
! +Gen:%>kurangu	derivational_case_3 ;
! +Loc:%>ngka		derivational_case_3 ;	! Locative - following a vowel (better done in twolc)
! +Loc:%>ta		derivational_case_3 ;	! following a consonant (difference betw t and j?)
! +Loc:%>ja		derivational_case_3 ;	! following a consonant
+Loc:%>		derivational_case_3 ;
+Perl:%>wana		derivational_case_3 ;	! Perlative (motion along / across a place)
+All:%>kutu		derivational_case_3 ;	! Allative (motion towards a place)

LEXICON grammatical_case_1
	derivational_focus_case ;
+Abs: 	derivational_focus_case ;
+Erg:%>lu derivational_focus_case; ! will do different ergative forms in twolc
+Erg:%>tu derivational_focus_case;
+Erg:%>ju derivational_focus_case;
+Dat:%>ku derivational_focus_case;

LEXICON derivational_avoid_case
+Avoid:%>ngkamarra	# ;	! Avoid (following a vowel) (will do in twolc)
+Avoid:%>jamarra	# ;	! Avoid (following a consonant)

