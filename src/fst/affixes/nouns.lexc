LEXICON semantic_case_1
+Abl:%>janu		derivational_case_3 ;	! Ablative (motion away from a place)
+Abl:%>nguru		derivational_case_3 ;
+Gen:%>kurnu		derivational_case_3 ;	! Genitive (referred to as POSS - possessive - in book)
+Gen:%>kura		derivational_case_3 ;	! kurnu is by far the most common GEN form
+Gen:%>kurangu		derivational_case_3 ;
+Loc:%>ngka		derivational_case_3 ;	! Locative - following a vowel (better done in twolc)
! +Loc:%>ja		derivational_case_3 ;	! following a consonant (native words or foreign words)
! +Loc:%>ta		derivational_case_3 ;	! following a consonant (alternative for foreign words)
+Perl:%>wana		derivational_case_3 ;	! Perlative (motion along / across a place)
+All:%>kutu		derivational_case_3 ;	! Allative (motion towards a place)

LEXICON grammatical_case_1
	derivational_focus_case ;
+Abs: 	derivational_focus_case ;
+Erg:%>lu derivational_focus_case; ! will do different ergative forms in twolc
! +Erg:%>ju derivational_focus_case; ! twolc
! +Erg:%>tu derivational_focus_case; XXX must get a separate contlex from Foreign words in -C.
+Dat:%>ku derivational_focus_case;

LEXICON derivational_avoid_case
+Avoid:%>ngkamarra	# ;	! Avoid (following a vowel) (will do in twolc)
