+3Du+Dat:%>pulampa K ;
+1Pl+Incl+Dat:%>lampa K ;
+1Pl+Excl+Dat:%>lampaju K ;
+2Pl+Dat:%>nyurrampa K ;
+3Pl+Dat:%>janampa K ;

! Accessory case - accessory can be Locative or Allative
+1Sg+Acs:%>rni K ;
+2Sg+Acs:%>nta K ;
+3Sg+Acs:%>lu K ;
+1Du+Incl+Acs:%>linya K ;
+1Du+Excl+Acs:%>linyaju K ;
+2Du+Acs:%>ntapula K ;
+3Du+Acs:%>pulanya K ;
+1Pl+Acs:%>lanya K ;
+1Pl+Excl+Acs:%>lanyaju K ;
+2Pl+Acs:%>nyurranya K ;
+3Pl+Acs:%>jananya K ;
 
! Ablative case
+1Sg+Abl:%>jura K ;
+2Sg+Abl:%>ngkura K ;
+3Sg+Abl:%>lura K ;
+1Du+Incl+Abl:%>limpajura K ;
+2Du+Excl+Abl:%>ngkurapula K ;
+3Du+Abl:%>janampalura K ;
+1Pl+Abl:%>lampajura K ;
+2Pl+Abl:%>ngkurapula K ;
+3Pl+Abl:%>janampalura K ;
 
! Reflexive pronoun clitics
+Refl:%>ju K ;
+Refl:%>ngku K ;



