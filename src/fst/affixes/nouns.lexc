LEXICON n_temporal_agr
+N+Sem/Temp:%> temporal_case ;

LEXICON n_spatial_agr
! +N+Sem/Spat:%> # ;
+N+Sem/Spat: spatial_case ;

LEXICON temporal_case
		# ;
+SpatLoc:%>ngka	# ;
+Der/Asst:%>jarra	# ;

LEXICON spatial_case
			# ;
+Der/Anoth:%>kujupa	# ;
+Der/Side:%>karti	# ;
