!! Noun inflection
!  ---------------
!! The Wangkajunga language nouns inflect in cases.

LEXICON NounReduplication	! not sure how to do this yet (there is a chapter in B&K on redupl)
		n_agr ;

LEXICON n_agr  
+N: x_agr ; ! This is the "general noun stem" of the floatchart

! Ergativity: Abs IV, Erg [ TV Abs ]

LEXICON x_agr ! This is the "general noun stem" of the floatchart
!semantic_case ;
!derivational_case ;
!focus ;
grammatical_case ;
!inchoative;	! NB from the book, inchoative is used as verbalisation
!verb_derivation_ti;


! LEXICON semantic_case 
+Abl:%>janu		temp;	! Ablative (motion away from a place)
+Abl:%>nguru		temp;
+GEN:%>kurnu		temp;	! genitive (referred to as POSS - possessive - in book)
+GEN:%>kura		temp;
+GEN:%>kurangu		temp;
+LOC:%>ngka		temp;	! locative - following a vowel
+LOC:%>ta		temp;	! following a consonant
+LOC:%>ja		temp;	! following a consonant
+PERL:%>wana		temp;	! perlative (motion along / across a place)
+ALL:%>kutu		temp;	! allative (motion towards a place)
+ALL:%>kutu		temp;
+AVOID:%>ngkamarra	#;		! avoid (following a vowel)
+AVOID:%>jamarra	#;		! avoid (following a consonant)

! LEXICON derivational_case 
+HAV:%>kurlu		temp;		!  having
+THING:%>pinti		temp;		! associated thing
+PRIV:%>parni		temp;		! privative
+INT:%>kija		temp;		! intentive
+WANT:%>jiraja		temp;		! want
+ASST:%>jarra		temp;		! associated time or space
+TEMP:%>puru		temp;		! temporal
+DWELL:%>karraja	temp;		! dweller
+SIDE:%>karti		temp;		! side
+TYPE:%>partu		temp;		! type
+SIM:%>yuru		temp;		! similar
+CONTR:%>munu		temp;		! contradictive
+MOD:%>marta		temp;		! moderative
+BIG:%>paka		temp;		! very big
+ANOTH:%>kujupa		temp;		! another
+VERY:%>minyirri	temp;		! very
+NUM:%>marlu		temp;		! numerative
+DUAL:%>kujarra		temp;		! dual
+FEW:%>paraku		temp;		! few
+PL:%>n			temp;		! plural alternative 1
+PL:%>rti		temp;		! plural alternative 2
+GRP:%>ngurun		temp;		! group *afterwards comes PA
+PAIR:%>rarra		temp;		! pair
+ONLY:%>wiyaju		temp;		! only

! LEXICON focus 
+FOC:%>nguninji		temp;		! focus (sometimes annotated as SPEC)

LEXICON grammatical_case
+Abs: absolutive_ergative ;
+Erg:%>lu absolutive_ergative ;
+Erg:%>tu absolutive_ergative ;
+Erg:%>ju absolutive_ergative ;
+Dat:%>ku absolutive_ergative ;

LEXICON absolutive_ergative
 K ; ! no person-number suffixed 
 person_number ;

LEXICON temp  ! need to discuss case combinations and ordering
 K ; 

